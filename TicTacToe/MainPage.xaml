<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TicTacToe"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <StackLayout>
        <Grid x:Name="GameGrid" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="10">
            <!-- Game Grid will be dynamically generated in code-behind -->
        </Grid>
        <Label x:Name="ResultLabel" Text="Result: " VerticalOptions="End" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        <Button Text="Restart" Clicked="OnRestartClicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>
